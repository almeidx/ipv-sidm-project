generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String   @map("password_hash")
  createdAt    DateTime @default(now()) @map("created_at")

  keys Key[]

  @@map("users")
}

model Key {
  id         Int      @id @default(autoincrement())
  key        String   @unique
  userId     String   @map("user_id")
  /// 1 - Client
  /// 2 - Server
  sourceType Int      @map("source_type")
  createdAt  DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("keys")
}

model SensorData {
  id        Int      @id @default(autoincrement())
  value     Float
  createdAt DateTime @default(now()) @map("created_at")
  sensorId  Int      @map("sensor_id")

  sensor Sensor @relation(fields: [sensorId], references: [id])

  @@index([sensorId])
  @@map("sensor_data")
}

model Sensor {
  id           Int      @id @default(autoincrement())
  name         String
  sensorTypeId Int      @map("sensor_type_id")
  createdAt    DateTime @default(now()) @map("created_at")
  maxThreshold Float    @map("max_threshold")
  minThreshold Float    @map("min_threshold")

  sensorData    SensorData[]
  sensorType    SensorType      @relation(fields: [sensorTypeId], references: [id])
  notifications Notifications[]

  @@map("sensors")
}

model SensorType {
  id   Int    @id @default(autoincrement())
  name String
  unit String

  sensors Sensor[]

  @@map("sensor_types")
}

model Notifications {
  id                 Int       @id @default(autoincrement())
  value              Float
  /// 0 - No threshold surpassed
  /// 1 - Min threshold surpassed
  /// 2 - Max threshold surpassed
  thresholdSurpassed Int       @map("threshold_surpassed")
  createdAt          DateTime  @default(now()) @map("created_at")
  sensorId           Int       @map("sensor_id")
  deletedAt          DateTime? @map("deleted_at")

  sensor Sensor @relation(fields: [sensorId], references: [id])

  @@index([sensorId])
  @@map("notifications")
}
