generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String   @map("password_hash")
  createdAt    DateTime @default(now()) @map("created_at")

  keys       Key[]
  sensorData SensorData[]

  @@map("users")
}

model Key {
  id         Int      @id @default(autoincrement())
  key        String   @unique
  userId     String   @map("user_id")
  /// 1 - Client
  /// 2 - Server
  sourceType Int      @map("source_type")
  createdAt  DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("keys")
}

model SensorData {
  id        Int      @id @default(autoincrement())
  value     String
  createdAt DateTime @default(now()) @map("created_at")
  userId    String   @map("user_id")
  sensorId  String   @map("sensor_id")

  user   User   @relation(fields: [userId], references: [id])
  sensor Sensor @relation(fields: [sensorId], references: [id])

  @@index([userId])
  @@index([sensorId])
  @@map("sensor_data")
}

model Sensor {
  id        String   @id @default(uuid())
  name      String
  // SQLite doesn't support enums
  /// 1 - Temperature (ÂºC)
  /// 2 - Coordinates (lat, long)
  /// 3 - Number
  /// 4 - String
  valueType Int      @map("value_type")
  createdAt DateTime @default(now()) @map("created_at")

  sensorData SensorData[]

  @@map("sensors")
}
